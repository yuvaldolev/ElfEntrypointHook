{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "-B",
                "build",
                "-G",
                "Ninja",
                "."
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "dependsOn": [
                "configure"
            ],
            "command": "cmake",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "--build",
                "build",
                "-j"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build",
            ],
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": [
                "build"
            ],
            "command": "build/main"
        }
    ]
}